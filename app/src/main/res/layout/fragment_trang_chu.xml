<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.fragmentTrangChu"
    android:background="@color/white"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        >

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/fragment_home_img_slide"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/fragment_home_btn_ds_mon_an"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/bogoc_btn_ds"
        android:textColor="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:background="@drawable/ic_baseline_fastfood_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Món ăn"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_rcv_mon_an"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/fragment_home_btn_ds_do_uong"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/bogoc_btn_ds"
        android:textColor="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:background="@drawable/ic_baseline_local_drink_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Đồ uống"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_rcv_nuoc_uong"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

</LinearLayout>