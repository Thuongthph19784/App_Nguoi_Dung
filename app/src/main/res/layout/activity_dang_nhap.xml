<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".Activity.Login"
    android:background="#FFFFFF">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="68dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/login_edit_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Tên tài khoản"
        android:layout_gravity="center"
        android:inputType="text"
        android:scaleX="0"
        android:scaleY="0"
        tools:ignore="Autofill"/>

    <EditText
        android:id="@+id/login_edit_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Mật khẩu"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:scaleX="0"
        android:scaleY="0"
        tools:ignore="Autofill" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:alpha="0"
        tools:alpha="1"
        android:layout_marginTop="0dp">
        <CheckBox
            android:id="@+id/login_checkBok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu mật khẩu"
            android:textAlignment="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bo_goc_custom1"
        android:scaleX="0"
        android:scaleY="0"
        android:text="Đăng nhập"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:alpha="0"
        tools:alpha="1">

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#595559" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#595559"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:background="#595559"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn_signUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/bo_goc_custom2"
        android:scaleX="0"
        android:scaleY="0"
        android:text="Đăng ký"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Forgot your login details? Get help signing in"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:alpha="0" />

    <TextView
        android:id="@+id/text_SignUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Don't have an account? SignUp"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:alpha="0" />
</LinearLayout>